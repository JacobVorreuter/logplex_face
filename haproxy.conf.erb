global
    maxconn 20000
    log 127.0.0.1 local0
    stats socket /tmp/haproxy.sock level admin

listen logplexapi :8000
    mode http
    option httplog
    contimeout 5000
    srvtimeout 1h
    timeout server 1h
    log global
    option tcplog
    balance url_param srv check_post max_wait 0<% @@logplex_instances.sort.each do |ip,weight| %>
    server <%= ip %> <%= ip %>:8001 check weight <%= weight %><% end %>

listen logplexviasyslog :514
    mode tcp
    log global
    option tcplog
    timeout client 1d
    timeout connect 5s
    timeout server 1d
    balance roundrobin<% @@logplex_instances.each do |ip,weight| %>
    server <%= ip %> <%= ip %>:514 check weight <%= weight %><% end %>

listen logplexdirect :601
    mode tcp
    log global
    option tcplog
    option socket-stats
    timeout client 1d
    timeout connect 5s
    timeout server 1d
    balance roundrobin<% @@logplex_instances.each do |ip,weight| %>
    server <%= ip %> <%= ip %>:601 check weight <%= weight %><% end %>
